---
const { title = "default", text = "default", width = "450px" } = Astro.props;
---

<div class="container">
    <div class="main" style={`--custom-width: ${width}`}>
        <div class="box">
            <div class="title">{title}</div>
            <slot name="description" />
            <slot name="entries" class="entries" />
            <slot name="options" />
        </div>
        <slot />
    </div>
    <div class="bg" style={`--custom-width: ${width}`}></div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .container {
        /* Center in the page */
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .container .main {
        background-color: #c2c2c2;
        width: var(--custom-width);
        padding: 18px 8px;
    }

    .container .main .box {
        border: 1px solid black;
        position: relative;
        padding: 15px 10px;
    }

    .container .main .box .title {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #c2c2c2;
        padding: 0 20px;
        border-right: 1px solid black;
        border-left: 1px solid black;
        color: #cc241d;
    }

    .container .bg {
        background-color: black;
        width: var(--custom-width);
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        transform: translate(10px, 13px);
        z-index: -1;
    }
</style>
