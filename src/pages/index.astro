---
import Layout from "../layouts/Layout.astro";
import Grub from "../components/Grub/index.astro";
---

<Layout>
    <Grub />
</Layout>

<style>
    body {
        background-color: black;
    }
</style>

<script>
    const disabled = localStorage.getItem("disable-bootloader") === "true";

    if (disabled) {
        window.location.href = "/home";
    }
</script>
